# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL="postgresql://username:password@your-host:25060/database-name?sslmode=require&connection_limit=10&pool_timeout=20&connect_timeout=60"
DIRECT_URL="postgresql://username:password@your-host:25060/database-name?sslmode=require"

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=4000

# ========================================
# SECURITY CONFIGURATION
# ========================================
JWT_SECRET="your_secure_jwt_secret_here"

# ========================================
# CORS & FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=https://your-domain.com

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ========================================
# ADMIN CONFIGURATION
# ========================================
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_NAME=Admin

# ========================================
# PRODUCTION DEPLOYMENT INFO
# ========================================
# Server IP: your.server.ip.address
# Domain: your-domain.com
# Frontend: https://your-domain.com
# Backend API: https://your-domain.com/api
# Admin Panel: https://your-domain.com/admin
